<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity" android:background="@drawable/bg3">

    <ImageView
            android:layout_width="161dp"
            android:layout_height="168dp" app:srcCompat="@drawable/app_logo"
            android:id="@+id/loginPageAppLogo" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.126" android:contentDescription="@string/todo"/>
    <ImageView
            android:layout_width="420dp"
            android:layout_height="388dp" app:srcCompat="@color/colorAccent"
            android:id="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.555"
            android:contentDescription="@string/todo"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/loginUsernameTxt" android:layout_marginEnd="64dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="64dp"
            android:layout_marginStart="64dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="64dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="@string/username" android:textColor="@color/cardview_light_background"
            android:textColorLink="@color/cardview_light_background"
            android:textColorHint="@color/cardview_light_background"
            android:textColorHighlight="@color/cardview_light_background"
            android:shadowColor="@color/cardview_light_background" app:layout_constraintHorizontal_bias="1.0"
            android:autofillHints="tests"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/loginPasswordTxt" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp" android:layout_marginRight="64dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="64dp"
            android:layout_marginStart="64dp" app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.619" android:textColorHighlight="@color/cardview_light_background"
            android:textColorHint="@color/cardview_light_background" android:hint="PASSWORD"
            android:textColor="@color/cardview_light_background"
            android:textColorLink="@color/cardview_light_background" app:layout_constraintHorizontal_bias="1.0"
            android:autofillHints="@string/as"/>
    <Button
            android:text="@string/login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_btn"
            android:id="@+id/loginPageLoginBtn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp"
            android:layout_marginRight="64dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="64dp" android:layout_marginStart="64dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.788" android:textColor="@color/cardview_light_background"
            android:layout_marginBottom="24dp" android:onClick="loginBtnClicked"/>
    <Button
            android:text="@string/login_with_facebook"
            android:layout_width="0dp"
            android:background="@drawable/rounded_btn"
            android:layout_height="wrap_content"
            android:id="@+id/faceBookLogin" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="64dp"
            android:layout_marginRight="64dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="64dp" android:layout_marginStart="64dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.881" android:textColor="@color/cardview_light_background"
            android:onClick="facebookLoginClicked"/>
    <TextView
            android:text="@string/sign_up"
            android:layout_width="75dp"
            android:layout_height="19dp"
            android:id="@+id/loginPageSignupBtn"
            android:onClick="loginPageSignUpBtnClicked" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintVertical_bias="1.0" android:textColorHighlight="@color/cardview_light_background"
            android:textColorHint="@color/cardview_light_background"
            android:textColorLink="@color/cardview_light_background"
            android:textColor="@color/cardview_light_background"/>
</androidx.constraintlayout.widget.ConstraintLayout>